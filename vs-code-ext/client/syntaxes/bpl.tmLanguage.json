{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BPL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "identifiers": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "variable.other.bpl"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.bpl",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bpl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bpl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.bpl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bpl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.bpl",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.bpl",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.octal.bpl",
          "match": "\\b0o[0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.bpl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bpl",
          "match": "\\b(if|else|loop|break|continue|return|import|from|export|extern)\\b"
        },
        {
          "name": "keyword.other.bpl",
          "match": "\\b(frame|global|local|const|struct|asm|call|ret)\\b"
        },
        {
          "name": "constant.language.bpl",
          "match": "\\b(NULL)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.bpl",
          "match": "\\b(u8|u16|u32|u64|i8|i16|i32|i64|f32|f64)\\b"
        },
        {
          "match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.bpl" },
            "2": { "name": "entity.name.type.struct.bpl" }
          }
        },
        {
          "include": "#generic-type"
        },
        {
          "begin": "\\b(import)\\b",
          "beginCaptures": {
            "1": { "name": "keyword.control.bpl" }
          },
          "end": "\\b(from)\\b",
          "endCaptures": {
            "1": { "name": "keyword.control.bpl" }
          },
          "patterns": [
            {
              "match": "\\[\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\]",
              "captures": {
                "1": { "name": "entity.name.type.imported.bpl" }
              }
            },
            {
              "match": ",",
              "name": "punctuation.separator.bpl"
            },
            {
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
              "name": "entity.name.function.imported.bpl"
            }
          ]
        },
        {
          "begin": "\\b(export)\\s*(\\[)",
          "beginCaptures": {
            "1": { "name": "keyword.control.bpl" },
            "2": { "name": "punctuation.section.brackets.begin.bpl" }
          },
          "end": "(\\])",
          "endCaptures": {
            "1": { "name": "punctuation.section.brackets.end.bpl" }
          },
          "patterns": [
            {
              "match": "[a-zA-Z_][a-zA-Z0-9_]*",
              "name": "entity.name.type.exported.bpl"
            },
            {
              "match": ",",
              "name": "punctuation.separator.bpl"
            }
          ]
        },
        {
          "match": "(:)\\s*((?:\\*\\s*)*)([a-zA-Z_][a-zA-Z0-9_]*)(?!\\s*<)",
          "captures": {
            "1": { "name": "keyword.operator.bpl" },
            "2": { "name": "keyword.operator.bpl" },
            "3": { "name": "entity.name.type.bpl" }
          }
        },
        {
          "match": "(:)\\s*((?:\\*\\s*)*)",
          "captures": {
            "1": { "name": "keyword.operator.bpl" },
            "2": { "name": "keyword.operator.bpl" }
          }
        },
        {
          "match": "\\b(ret)\\s+((?:\\*\\s*)*)([a-zA-Z_][a-zA-Z0-9_]*)(?!\\s*<)",
          "captures": {
            "1": { "name": "keyword.other.bpl" },
            "2": { "name": "keyword.operator.bpl" },
            "3": { "name": "entity.name.type.bpl" }
          }
        },
        {
          "match": "\\b(ret)\\s+((?:\\*\\s*)*)",
          "captures": {
            "1": { "name": "keyword.other.bpl" },
            "2": { "name": "keyword.operator.bpl" }
          }
        }
      ]
    },
    "generic-type": {
      "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(<)(?=\\s*.*<|>)",
      "beginCaptures": {
        "1": { "name": "entity.name.type.bpl" },
        "2": { "name": "punctuation.definition.generic.begin.bpl" }
      },
      "end": ">",
      "endCaptures": {
        "0": { "name": "punctuation.definition.generic.end.bpl" }
      },
      "patterns": [
        {
          "include": "#types"
        },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "entity.name.type.bpl"
        },
        {
          "match": ",",
          "name": "punctuation.separator.bpl"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(frame)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.bpl" },
            "2": { "name": "entity.name.function.bpl" }
          }
        },
        {
          "match": "\\b(call)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.bpl" },
            "2": { "name": "entity.name.function.bpl" }
          }
        },
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.bpl" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b(local|global|const|argument)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.bpl" },
            "2": { "name": "variable.name.bpl" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.bpl",
          "match": "(\\+|\\-|\\*|\\/|%|\\^|&|\\||~|\\!|=|<|>|\\.)"
        }
      ]
    }
  },
  "scopeName": "source.bpl"
}
