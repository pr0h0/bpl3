{
  "name": "bpl-vscode",
  "displayName": "BPL Language Support",
  "description": "Language support for BPL (The Best Programming Language)",
  "version": "0.1.10",
  "publisher": "pr0h0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:bpl"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pr0h0/bpl3"
  },
  "author": {
    "name": "pr0h0",
    "url": "https://pr0h0.me",
    "email": "abdulahproho@gmail.com"
  },
  "license": "Apache-2.0",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bpl",
        "aliases": [
          "BPL",
          "bpl"
        ],
        "extensions": [
          ".x"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/bpl.svg",
          "dark": "./icons/bpl.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "bpl",
        "scopeName": "source.bpl",
        "path": "./syntaxes/bpl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "bpl",
        "path": "./snippets/bpl.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "entity.name.type.exported.bpl",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.type.imported.bpl",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "entity.name.type.struct.bpl",
            "settings": {
              "foreground": "#4EC9B0"
            }
          },
          {
            "scope": "entity.name.type.bpl",
            "settings": {
              "foreground": "#4EC9B0"
            }
          },
          {
            "scope": "entity.name.function.bpl",
            "settings": {
              "foreground": "#DCDCAA"
            }
          },
          {
            "scope": "variable.name.bpl",
            "settings": {
              "foreground": "#9CDCFE"
            }
          },
          {
            "scope": "variable.other.bpl",
            "settings": {
              "foreground": "#9CDCFE"
            }
          },
          {
            "scope": "constant.language.bpl",
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": "keyword.control.bpl",
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": "keyword.other.bpl",
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": "storage.type.bpl",
            "settings": {
              "foreground": "#569CD6"
            }
          }
        ]
      }
    }
  }
}
